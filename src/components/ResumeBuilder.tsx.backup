interface ResumeSection {
  id: string;
  type: 'header' | 'summary' | 'experience' | 'education' | 'skills' | 'projects' | 'certifications' | 'languages' | 'interests' | 'custom';
  title: string;
  content: string;
  order: number;
  visible: boolean;
}

interface ResumeTemplate {
  id: string;
  name: string;
  description: string;
  category: 'modern' | 'classic' | 'creative' | 'minimal';
  preview: string;
  sections: ResumeSection[];
  styling: {
    fontFamily: string;
    fontSize: string;
    colorScheme: string;
 spacing: string;
    layout: string;
  };
}

interface UploadedFile {
  id: string;
  name: string;
  content: string;
  securityScore: number;
  threats: string[];
  metadata?: {
    wordCount: number;
    characterCount: number;
    language: string;
  };
}

